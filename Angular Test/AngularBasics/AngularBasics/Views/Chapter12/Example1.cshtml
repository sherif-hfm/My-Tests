
@{
    ViewBag.Title = "Index";
}

<style>
    td > *:first-child {
        font-weight: bold;
    }
</style>

<h2>Using Form Elements with Two-Way Data Bindings</h2>
<h2>Implicitly Creating Model Properties</h2>



<div id="todoPanel" class="panel" ng-controller="defaultCtrl">
    <h3 class="panel-header">
        To Do List
        <span class="label label-info">
            {{ (todos | filter: {complete: 'false'}).length}}
        </span>
    </h3>
    <div class="row">
        <div class="col-xs-6">
            <div class="well">
                <div class="form-group row">
                    <label for="actionText">Action:</label>
                    <input id="actionText" class="form-control"  ng-model="newTodo.action">
                </div>
                <div class="form-group row">
                    <label for="actionLocation">Location:</label>
                    <select id="actionLocation" class="form-control" ng-model="newTodo.location">
                        <option>Home</option>
                        <option>Office</option>
                        <option>Mall</option>
                    </select>
                </div>
                <button class="btn btn-primary btn-block" ng-click="addNewItem(newTodo)">
                    Add
                </button>
            </div>
        </div>
        <div class="col-xs-6">
            <table class="table">
                <thead>
                    <tr><th>#</th><th>Action</th><th>Done</th></tr>
                </thead>
                <tr ng-repeat="item in todos">
                    <td>{{$index + 1}}</td>
                    <td>{{item.action}}</td>
                    <td>
                        <input type="checkbox" ng-model="item.complete">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="~/Scripts/MyScripts/Chapter12/Example1.js"></script>
}


