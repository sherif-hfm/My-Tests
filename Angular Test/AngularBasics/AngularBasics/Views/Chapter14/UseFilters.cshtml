@{
    ViewBag.Title = "ControllerInheritance";
}

<h2>Use Filters</h2>

<div ng-controller="defaultCtrl">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Products
                <span class="label label-primary">{{products.length}}</span>
            </h3>
        </div>
        
        <div class="panel-body">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Category</td>
                        <td>Expiry</td>
                        <td class="text-right">Price</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="p in products">
                        <td>{{p.name | uppercase }}</td>
                        <td>{{p.category | lowercase }}</td>
                        <td>{{getExpiryDate(p.expiry) | date:"dd MMM yy"}}</td>
                        @*<td class="text-right">{{p.price | currency : "SAR"}}</td>*@
                        <td>{{p.price  |  number:2 | currency : "SAR" }}</td>
                        <td>{{p.name | labelCase }}</td>
                        <td>{{p.category | labelCase:true }}</td>
                        @*<td>{{p | json}}</td>*@
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="panel-body">
                Limit: <select ng-model="limitVal" ng-options="item for item in limitRange"></select>
            </div>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Category</td>
                        <td>Expiry</td>
                        <td class="text-right">Price</td>
                    </tr>
                </thead>
                <tbody>
                    @*<tr ng-repeat="p in products | limitTo:limitVal">*@
                    @*<tr ng-repeat="p in products | filter:{category: 'Fish'}">*@
                    @*<tr ng-repeat="p in products | filter:selectItems | orderBy:'price'">*@
                    @*<tr ng-repeat="p in products | orderBy:myCustomSorter">*@
                    @*<tr ng-repeat="p in products | orderBy:[myCustomSorter, '-price']">*@
                    @*<tr ng-repeat="p in products | orderBy:[myCustomSorter, '-price'] | limitTo: 5">*@
                    @*<tr ng-repeat="p in products | skip:2 | limitTo: 5">*@
                    <tr ng-repeat="p in products | take:2:5">
                        <td>{{p.name}}</td>
                        <td>{{p.category}}</td>
                        <td>{{p.expiry}}</td>
                        <td class="text-right">{{p.price | currency }}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/Scripts/MyScripts/Chapter14/UseFilters.js"></script>
    @*<script src="~/Scripts/MyScripts/Chapter14/angular-locale_ar-sa.js"></script>*@
}