@model MVCBasics.Models.Person

@{
    ViewBag.Title = "New Person";
    Layout = "~/Views/_Layout.cshtml";
}

@using (Html.BeginForm("SaveNew", "Person"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PersonId)

        <div class="form-group">
            @Html.LabelFor(model => model.PersonName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PersonName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonName, "", new { @class = "text-danger" })
                <br /><br />
                @Html.LabelFor(model => model.CountryId, htmlAttributes: new { @class = "control-label col-md-2" })
                @* DropDown must not have the same name has the ViewBag data name *@
                @*@Html.DropDownList("CountryId", new SelectList((List<MVCBasics.Models.Country>)ViewBag.Countries, "CountryId", "CountryName", @Model.CountryId))*@
                @Html.DropDownList("CountryId", new SelectList((List<MVCBasics.Models.Country>)ViewBag.Countries, "CountryId", "CountryName"))
                <br /><br />
                @Html.LabelFor(model => model.PersonAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.PersonAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonAddress, "", new { @class = "text-danger" })
                <br /><br />
                @Html.LabelFor(model => model.PersonAge, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.PersonAge, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonAge, "", new { @class = "text-danger" })
                <br /><br />
                @Html.Partial("EditUserLogin")

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
